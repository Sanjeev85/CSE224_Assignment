<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/margin_lt_rt</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin_lt_rt</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/micro</item>


    </style>

    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#20212e</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/margin_lt_rt</item>
        <item name="android:layout_marginRight">@dimen/margin_lt_rt</item>
        <item name="android:background">@drawable/cornerbutton</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:text">@string/signin</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/micro</item>
    </style>

    <style name="transparentButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/button_with_borders</item>
        <item name="android:text">@string/join</item>
        <item name="android:textColor">#20212e</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginBottom">@dimen/margin</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <style name="microsoftButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/button_with_borders</item>
        <item name="android:drawableLeft">@drawable/micro</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">99dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/signup</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#20212e</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>
</resources>